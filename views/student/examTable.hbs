<div class="row">
    <form class="semester labelSemester ml-2 mb-2" action="/teacher/exam" method="GET">
        <span align="center">
            <span>Năm học:</span>
            <select class="semester" style="border: none; color:blanchedalmond" name="year"
                onchange="this.form.submit();">
                {{#each allYearSemester}}
                {{#if this}}
                <option value="{{this}}">{{this}}</option>
                {{/if}}
                {{/each}}
            </select>
        </span>
        <span align="center">
            <span>Học kì:</span>
            <select class="semester" style="border: none; color:blanchedalmond" name="semester"
                onchange="this.form.submit();">
                {{#if isLastSemester}}
                <option value="2">2</option>
                <option value="1">1</option>
                {{else}}
                <option value="1">1</option>
                <option value="2">2</option>
                {{/if}}
            </select>
        </span>
    </form>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>MÔN HỌC</th>
                        <th>NGÀY THI</th>
                        <th>PHÒNG THI</th>
                        <th>TIẾT BẮT ĐẦU</th>
                    </tr>
                </thead>
                {{#each scheduleExam}}
                <tbody>
                    <tr>
                        <td>{{subjectName}}</td>
                        <td>{{dayExam}}</td>
                        <td>{{roomName}}</td>
                        <td>{{startSection}}</td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
        </div>
    </div>
</div>
