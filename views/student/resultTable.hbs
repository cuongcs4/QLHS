<div class="row">
    <form class="semester labelSemester ml-2 mb-2" action="/student/resulttable" method="GET">
        <span align="center">
            <span>Năm học:</span>
            <select class="semester" style="border: none; color:blanchedalmond" name="year"
                onchange="this.form.submit();">
                {{#each allYearSemester}}
                {{#if this}}
                <option value="{{this}}">{{this}}</option>
                {{/if}}
                {{/each}}
            </select>
        </span>
        <span align="center">
            <span>Học kì:</span>
            <select class="semester" style="border: none; color:blanchedalmond" name="semester"
                onchange="this.form.submit();">
                {{#if isLastSemester}}
                <option value="2">2</option>
                <option value="1">1</option>
                {{else}}
                <option value="1">1</option>
                <option value="2">2</option>
                {{/if}}
            </select>
        </span>
    </form>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="resultTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>MÔN HỌC</th>
                        <th>15 PHÚT<sup>1</sup></th>
                        <th>15 PHÚT<sup>2</sup></th>
                        <th>1 TIẾT</th>
                        <th>THI CUỐI KÌ</th>
                        <th>TRUNG BÌNH</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each listScoreView}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{subjectName}}</td>
                        <td>{{score1}}</td>
                        <td>{{score2}}</td>
                        <td>{{score3}}</td>
                        <td>{{score4}}</td>
                        <td>{{gpa}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="text-align: center;">TRUNG BÌNH</th>
                        <th style="text-align: center;">HỌC LỰC</th>
                        <th style="text-align: center;">HẠNH KIỂM</th>
                    </tr>
                </thead>

                <tbody>

                    <tr>
                        <td style="text-align: center;">{{GPA}}</td>
                        <td style="text-align: center;">{{classifyGPA}}</td>
                        <td style="text-align: center;">{{conduct}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



<div class="modal fade" id="modalReExaminationForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Tạo đơn phúc khảo</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-subjectName">Môn học</label>
                    <select id="defaultForm-subjectName" class="form-control validate">
                        {{#each listSubjectView}}
                        <option value="{{subject}}">{{subjectName}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-note">Nội dung phúc khảo</label>
                    <textarea name="comment" class="form-control"></textarea>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-danger">Xác nhận</button>
            </div>
        </div>
    </div>
</div>