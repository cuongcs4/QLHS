<div class="card shadow mb-4">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#teacher" role="tab" aria-controls="home"
                aria-selected="true">GIÁO VIÊN</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#staff" role="tab" aria-controls="profile"
                aria-selected="false">GIÁO VỤ</a>
        </li>
    </ul>
    <div class="card-body">
        <div class="tab-content profile-tab" id="myTabContent">
            <div class="tab-pane fade show active" id="teacher" role="tabpanel" aria-labelledby="home-tab">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <td>STT</td>
                                <th>MÃ GIÁO VIÊN</th>
                                <th>TÊN GIÁO VIÊN</th>
                                <th>CMND</th>
                                <th>NGÀY SINH</th>
                                <th>ĐỊA CHỈ</th>
                                <th>MÃ BM</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each listTeacherView}}
                            <tr>
                                {{#each this}}
                                <td>{{this}}</td>
                                {{/each}}
                                <td><i class="fa fa-pencil-square-o" data-toggle="modal" data-target="#modalEditUser"
                                        aria-hidden="true"></i></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="tab-pane fade" id="staff" role="tabpanel" aria-labelledby="profile-tab">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable2" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <td>STT</td>
                                <th>MÃ GIÁO VIÊN</th>
                                <th>TÊN GIÁO VIÊN</th>
                                <th>CMND</th>
                                <th>NGÀY SINH</th>
                                <th>ĐỊA CHỈ</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each listEmployeeView}}
                            <tr>
                                {{#each this}}
                                <td>{{this}}</td>
                                {{/each}}
                                <td><i class="fa fa-pencil-square-o" data-toggle="modal" data-target="#modalEditUser"
                                        aria-hidden="true"></i></td>
                            </tr>
                            {{/each}}
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a href="" class="btn btn-primary btn-rounded mb-4" data-toggle="modal" data-target="#modalAddUser">Thêm
        CB-CNV</a>
</div>
<div class="modal fade" id="modalAddUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Thêm CB-CNV</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
