<div class="row">
    <div class="col-md-6">

    </div>
    <div class="col-md-6 d-flex justify-content-end">
        {{#if latestSemester.status}}
        <a style="cursor: pointer; color: white" class="btn btn-primary btn-rounded mb-4" data-toggle="modal"
            data-target="#semesterEnd">Kết thúc học kỳ</a>
        {{else}}
        <a style="cursor: pointer; color: white" class="btn btn-primary btn-rounded mb-4" data-toggle="modal"
            data-target="#semesterStart">Bắt đầu học kỳ mới</a>
        {{/if}}
    </div>
</div>

<div class="card shadow mb-4 row">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="" width="100%" cellspacing="0"
                style="font-size: 15px; color: black">
                <thead>
                    <tr>
                        <th style="width: 5%; text-align: center;">STT</th>
                        <th style="text-align: center;">HỌC KỲ</th>
                        <th style="text-align: center;">NĂM HỌC</th>
                        <th style="text-align: center;">TRẠNG THÁI</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each listSemester}}
                    <tr>
                        <td style="text-align: center;">{{id}}</td>
                        <td style="text-align: center;">{{semesterID}}</td>
                        <td style="text-align: center;">{{yearStart}}-{{yearEnd}}</td>
                        {{#if status}}
                        <td style="text-align: center; color: green">Đang mở</td>
                        {{else}}
                        <td style="text-align: center;color: red">Đã đóng</td>
                        {{/if}}
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>

{{#if latestSemester.status}}
<div class="modal fade" id="semesterEnd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="modal-content" action="/admin/semester" method="POST">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Kết thúc học kỳ</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-teacherID">Học kỳ</label>
                    <input type="text" id="defaultForm-teacherID" class="form-control validate"
                        value="{{latestSemester.semesterID}}" readonly>
                </div>
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-roomID">Năm học</label>
                    <input type="text" id="defaultForm-roomID" class="form-control validate"
                        value="{{latestSemester.yearStart}}-{{latestSemester.yearEnd}}" readonly>
                </div>


            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-danger">Xác nhận</button>
            </div>
        </form>
    </div>
</div>
{{else}}
<div class="modal fade" id="semesterStart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="modal-content" action="/admin/semester" method="POST">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Bắt đầu học kỳ</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-teacherID">Học kỳ</label>
                    <input type="text" id="defaultForm-teacherID" class="form-control validate"
                        value="{{nextSemester.semesterID}}" readonly>
                </div>
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-roomID">Năm học</label>
                    <input type="text" id="defaultForm-roomID" class="form-control validate"
                        value="{{nextSemester.yearStart}}-{{nextSemester.yearEnd}}" readonly>
                </div>



            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-danger">Xác nhận</button>
            </div>
        </form>
    </div>
</div>
{{/if}}