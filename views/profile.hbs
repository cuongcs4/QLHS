<div class="container emp-profile">
        {{#profile user}}{{/profile}} 
</div>
<div class="modal fade" id="modalChangePassword" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="modal-content" action="/profile/changePassword" method="POST">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Thêm Giáo Viên</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3">
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-currentPassword">Mật khẩu hiện tại</label>
                    <input name="currentPassword" type="password" id="defaultForm-currentPassword" class="form-control validate pass_show" required>
                </div>
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-newPassword1">Mật
                        khẩu mới</label>
                    <input name="newPassword1" type="password" id="defaultForm-newPassword1" class="form-control validate pass_show" required>
                </div>
                <div class="md-form mb-2 form-inline">
                    <label data-error="wrong" data-success="right" for="defaultForm-newPassword2">Xác nhận mật khẩu mới</label>
                    <input name="newPassword2" type="password" id="defaultForm-newPassword12" class="form-control validate pass_show" required>
                </div>
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-danger" type="submit">Đổi mật khẩu</button>
            </div>
        </form>
    </div>
</div>