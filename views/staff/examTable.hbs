<div class="row">
    <div class="semester ml-2 mb-2">
        <p class="labelSemester">Năm học: 2019-2020</p>
    </div>
    <form class="form-inline labelSemester ml-2 mb-2" action="" method="GET" onchange="submit()">
        <div class="semester form-group"> 
                <lable for="semester">Học kì :</lable>
                <select class="semester mb-1 accordion" style="border: none; color:blanchedalmond; height:auto !important" name="semester" id="semester">
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
        </div>
        <div class="semester form-group ml-2">
                <lable for="grade">Khối :</lable>
                <select class="semester mb-1 form-control" style="border: none; color:blanchedalmond; height:auto !important" name="grade" id="grade">
                    <option value="all">Tất cả </option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>   
        </div>
    </form>
</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>MÔN HỌC</th>
                        <th>NGÀY THI</th>
