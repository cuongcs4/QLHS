<div class="container">
	<div class="row">
		<form class="col-md-4" action="/changePassword" method="Post">
		    <label>Mật khẩu cũ</label>
		    <div class="form-group pass_show"> 
                <input type="password"  name="currentPassword" class="form-control" autocomplete="off" required> 
            </div> 
		       <label>Mật khẩu mới</label>
            <div class="form-group pass_show"> 
                <input type="password" id="newPassword1" name="newPassword1"  class="form-control" autocomplete="off" required> 
            </div> 
		       <label>Xác nhận</label>
            <div class="form-group pass_show"> 
                <input type="password" id="newPassword2" name="newPassword2" class="form-control" autocomplete="off" required> 
            </div> 
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-danger" type="submit">Xác nhận</button>
            </div>
            <input type="hidden" name="username" id="username" value="{{user.username}}">
		</form>  
	</div>
</div>